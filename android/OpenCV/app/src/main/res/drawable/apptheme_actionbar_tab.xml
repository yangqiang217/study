<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true"
        android:state_selected="false" >
    <shape android:shape="rectangle">
      <solid android:color="@color/apptheme_actionbar_background_pressed" />
    </shape>
  </item>

  <item android:state_pressed="false"
        android:state_selected="true">
    <layer-list>
      <item>
        <shape android:shape="rectangle">
          <solid android:color="@color/apptheme_actionbar_border" />
        </shape>
      </item>
      <item android:bottom="5dp">
        <shape android:shape="rectangle">
          <solid android:color="@color/apptheme_actionbar_background" />
        </shape>
      </item>
    </layer-list>
  </item>

  <item android:state_pressed="true"
        android:state_selected="true" >
    <layer-list>
      <item>
        <shape android:shape="rectangle">
          <solid android:color="@color/apptheme_actionbar_border" />
        </shape>
      </item>
      <item android:bottom="5dp">
        <shape android:shape="rectangle">
          <solid android:color="@color/apptheme_actionbar_background_pressed" />
        </shape>
      </item>
    </layer-list>
  </item>

  <item
    android:state_pressed="false"
    android:state_selected="false">
    <shape android:shape="rectangle">
      <solid android:color="@color/apptheme_actionbar_background" />
    </shape>
  </item>

</selector>