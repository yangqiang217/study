<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <include
        android:id="@+id/layout_choose_nav"
        layout="@layout/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"/>

    <TextView
        android:id="@+id/tv_choose_course_confirm"
        style="@style/long_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="确认选择"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_choose_course_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_choose_nav"
        android:layout_above="@id/tv_choose_course_confirm"/>
</RelativeLayout>