<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">

    <TextView
        android:id="@+id/tv_reg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="注册"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_reg_confirm"
        style="@style/long_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="确认注册" />

    <com.studentsystem.view.PersonEditView
        android:id="@+id/v_reg_personedit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_reg_title"
        android:layout_above="@id/tv_reg_confirm"/>

</RelativeLayout>