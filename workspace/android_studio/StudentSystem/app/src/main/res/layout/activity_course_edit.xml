<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_course_edit_nav"
        layout="@layout/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"/>

    <LinearLayout
        android:id="@+id/ll_course_edit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray_background"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_course_edit_confirm"
            style="@style/long_button"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="确认修改"/>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/layout_course_edit"
        android:layout_below="@id/layout_course_edit_nav"
        android:layout_above="@id/ll_course_edit_btn"/>
</RelativeLayout>