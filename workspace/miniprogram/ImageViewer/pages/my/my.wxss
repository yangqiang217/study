.base-url-container {
    display: flex;
    width: 100%;
    height: 70rpx;
    box-sizing: border-box;
    margin-top: 5rpx;
}
.base-url-container input {
    box-sizing: border-box;
    background: rgba(255, 255, 255, 0.3);
    font-size: 24rpx;
    
    width: 100rpx;
    height: 70rpx;
    border-radius: 20rpx;
    border: 1rpx solid rgba(0, 0, 0, 0.3);
    padding-left: 15rpx; 

    margin-left: 10rpx;
    margin-right: 10rpx;

    flex-grow: 1;
}
.base-url-container text {
    width: 160rpx;
    line-height: 70rpx;
    font-size: 28rpx;
    text-align: center;
    border-radius: 15rpx;
    background-color: #ff5777;
    color: white;
    margin-right: 10rpx;

    flex-grow: 0;
}