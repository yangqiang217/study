<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <CheckBox
        android:id="@+id/mCheckBox"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:button="@drawable/recommend_config_dialog_item_checkbox_bg"
        android:checked="true"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <FrameLayout android:id="@+id/layoutImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/mCheckBox">
        <ImageView
            android:id="@+id/mImageView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image_null_desc" />
    </FrameLayout>

    <ImageView
        android:id="@+id/mEditImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/edit_name_modify"
        android:contentDescription="@string/image_null_desc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/mEditImage"
        android:layout_toRightOf="@+id/layoutImage"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="220dp"
            android:singleLine="true"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/mTextViewDeng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gallery_preview_tip"
            android:textColor="@color/light_gray"
            android:textSize="13sp" />
    </LinearLayout>
</RelativeLayout>
